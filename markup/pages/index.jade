doctype html
html(class="no-js", lang="ru")

  include ../components/head/head
  include ../components/page/page
  include ../components/header/header
  include ../components/main-part/main-part
  include ../components/footer/footer

  head
    +head(head.defaults)
  +page()
    |%=symbols=%
    +header( { index: true, menu: { active: false, url: 'index__menu.html' }, order: { active: false, url: 'index__order.html' } } )

    +main-part()

    +footer()

    .popup.popup_size_m.popup_show.popup_ny
      +button( { mods: { type: 'button' } } )(class='popup__close')
        | &times;
      .popup__content
        video.video(src="/ny_schastye_2017.mp4" autoplay)

    //- script.
      document.querySelector('.popup_ny').classList.toggle('popup_show');
    script(src='%=static=%js/separate-js/svg4everybody.min.js')
    script svg4everybody();

    //- Main scripts. You can replace it, but I recommend you to leave it here
    script(src='%=static=%js/main%=hash=%%=min=%.js')